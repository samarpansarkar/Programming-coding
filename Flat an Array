function flatArray(arr){
    let newArr=[];

    function helper(arr){
        for(let i=0; i<arr.length;i++){
            if(Array.isArray(arr[i])){
                helper(arr[i])
            }else{
                newArr[newArr.length]=arr[i]
            }
        }
    }
    helper(arr);
    return newArr;
}

let res = flatArray([1,2,[3,[4,5],6],7])

console.log(res)
