function minmax (arr){
    let min=arr[0];
    let max =arr[0];

    for(let i=0; i<arr.length-1; i++){
        
        if(max<arr[i]){
            max = arr[i];
        }
        if(min>arr[i]){
            min= arr[i];
        }
    }

    return {max: max, min: min}
}

let res = minmax([1,2,3,2,4,2,-4,543,22,4,31]);

console.log(res);
